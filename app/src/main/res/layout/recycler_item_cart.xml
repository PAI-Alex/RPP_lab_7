<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:layout_height="wrap_content" android:layout_margin="5dp" android:background="#BFE4FA">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/name_text_recycler_cart" android:background="#D32657EC" android:layout_margin="5dp"
            android:textSize="18sp" android:gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/price_text_recycler_cart" android:background="#D32657EC" android:layout_margin="5dp"
            android:textSize="18sp" android:gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/count_text_recycler_cart" android:background="#D32657EC" android:layout_margin="5dp"
            android:textSize="18sp" android:gravity="center"/>

</LinearLayout>