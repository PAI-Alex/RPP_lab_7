<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:id="@+id/name_pager_main" android:background="#D32657EC" android:textSize="18sp"
            android:layout_gravity="center" android:gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:id="@+id/price_pager_main" android:background="#D32657EC" android:textSize="18sp"
            android:layout_gravity="center" android:gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:id="@+id/count_pager_main" android:background="#D32657EC" android:textSize="18sp"
            android:layout_gravity="center" android:gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:id="@+id/desc_pager_main" android:background="#D32657EC" android:textSize="18sp"
            android:layout_gravity="center" android:gravity="center"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:id="@+id/viewpager_item_btn"
            android:text="Добавить в корзину" android:background="#02053A"/>
</LinearLayout>