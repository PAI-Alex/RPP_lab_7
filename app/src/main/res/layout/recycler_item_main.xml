<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/recycler_item_layout_main"
        android:layout_margin="30dp"
        android:layout_height="150dp" android:background="#D2DCE6">
    <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/name_text_recycler_main" android:background="#D32657EC" android:textSize="18sp"
            android:gravity="center"/>
    <TextView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/price_text_recycler_main" android:background="#D32657EC" android:textSize="18sp"
            android:gravity="center"/>
</LinearLayout>